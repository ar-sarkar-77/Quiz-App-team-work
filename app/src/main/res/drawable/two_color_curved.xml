<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#221F1F1F" />
            <corners android:radius="16dp" />
        </shape>
    </item>


    <item
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp">

        <shape android:shape="rectangle">
            <solid android:color="#FFF0D0" />
            <corners android:radius="16dp" />
        </shape>

    </item>

</layer-list>
